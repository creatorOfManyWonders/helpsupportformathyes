<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Name Input" Height="200" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="76*"/>
            <ColumnDefinition Width="679*"/>
        </Grid.ColumnDefinitions>

        <Image Source="https://www.shutterstock.com/image-vector/font-design-word-math-genius-600nw-1693716025.jpg" Stretch="Fill" Visibility="Visible" Grid.ColumnSpan="3"/>

        <TextBox x:Name="nameTextBox" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="446" TextWrapping="Wrap" Text=""  Margin="13,28,0,0" Grid.ColumnSpan="2" Grid.Column="1" />
        <TextBlock x:Name="nameTextBlock" HorizontalAlignment="Left" TextWrapping="Wrap" TextAlignment="Center" Text="Name" VerticalAlignment="Top" Margin="5,4,0,0" Grid.Column="1" Grid.ColumnSpan="2" Width="452"/>
        <Button x:Name="submitNameButton" Background="Orange" Content="Submit Name" HorizontalAlignment="Left" Margin="128,55,0,0" VerticalAlignment="Top" Width="112" Grid.Column="2" Click="submitNameButton_Click"/>

    </Grid>
</Window>