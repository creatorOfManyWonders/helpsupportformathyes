<Window x:Class="WpfApp3.GradeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Grade" Height="300" Width="300">
    <Grid>
        <!-- רקע עם התמונה -->
        <Image Source="https://img.freepik.com/free-vector/pride-gradient-1_78370-282.jpg" Stretch="Fill" Visibility="Visible"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- כותרת לבחירת הכיתה -->
            <TextBlock Text="Select Your Grade" FontWeight="Bold" FontSize="16" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,70"/>

            <!-- כפתורים לבחירת הכיתה -->
            <Button x:Name="t1GradeButton" Content="First Grade" Margin="5" Foreground="White" FontSize="14" Background="Violet" Click="GradeButton_Click"/>
            <Button x:Name="t2dGradeButton" Content="Second Grade" Margin="5" Foreground="White" FontSize="14" Background="DeepSkyBlue" Click="GradeButton_Click"/>
            <Button x:Name="t3dGradeButton" Content="Third Grade" Margin="5" Foreground="White" FontSize="14" Background="Cyan" Click="GradeButton_Click"/>
            <Button x:Name="t4hGradeButton" Content="Fourth Grade" Margin="5" Foreground="White" FontSize="14" Background="GreenYellow" Click="GradeButton_Click"/>
        </StackPanel>
    </Grid>
</Window>