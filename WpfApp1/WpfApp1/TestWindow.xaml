<Window x:Class="WpfApp3.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Math Test" Height="400" Width="800">
    <Grid>
        <Image Source="https://i.pinimg.com/564x/91/98/85/919885f72226ad8e9e4f07aa745dc5eb.jpg" Stretch="Fill" Visibility="Visible"/>
        <TextBlock HorizontalAlignment="Center" Text="שאלה" VerticalAlignment="Top" TextAlignment="Center" FontSize="30" Margin="0,10,0,0" Width="780"/>
        <TextBlock x:Name="questionTextBlock" HorizontalAlignment="Left" FontSize="30" TextWrapping="Wrap" VerticalAlignment="Top" Margin="10,30,0,0"/>
        <TextBox x:Name="answerTextBox" HorizontalAlignment="Center" VerticalAlignment="Top" TextAlignment="Center" FontSize="30" Margin="0,70,0,0" Width="780" Height="117"/>
        <Button x:Name="submitAnswerButton" Content="הגש תשובה" FontSize="30" HorizontalAlignment="Center" Background="AliceBlue" Margin="0,192,0,0" VerticalAlignment="Top" Click="SubmitAnswerButton_Click" Width="780" Height="54"/>
        <TextBlock x:Name="progressTextBlock" HorizontalAlignment="Left" TextAlignment = "Center" FontSize="25" VerticalAlignment="Top" Margin="10,251,0,0" Height="123" Width="186"/>
        <TextBlock x:Name="resultTextBlock" HorizontalAlignment="Right" TextAlignment = "Center" FontSize="25" VerticalAlignment="Top" Margin="0,251,10,0" Height="123" Width="186"/>
    </Grid>
</Window>